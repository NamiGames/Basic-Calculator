import java.util.Scanner;
public class apples {
	//basic calculator only adding
	public static void main(String[] args) {
		// scanner can be named anything
	Scanner waver = new Scanner(System.in);
	double fnum, snum, awnser;
	System.out.println("Enter first number: ");
	fnum = waver.nextDouble();
	System.out.println("Enter second number: ");
	snum = waver.nextDouble();
	//change + for different outcomes
	awnser = fnum + snum;
	System.out.println(awnser);
	}

}
